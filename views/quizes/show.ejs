<div class="container">
	<div class="row">
		<div class="col-md-6">
			<form action="/quizes/<%= quiz.id %>/answer" method="get" role="form">
					<legend>Pregunta - Temática <%= quiz.tema %></legend>
				
					<div class="form-group">
						<label for=""><%= quiz.pregunta %></label>
						<input type="text" name="respuesta" class="form-control" id="" placeholder="Responda aquí">
					</div>
				
					<button type="submit" class="btn btn-primary">Enviar</button>
			</form>
			<hr>
			<p>Comentarios:</p>
			<ul class="list-group">
				<% for(index in quiz.Comments) { %>
					<li class="list-group-item"><%= quiz.Comments[index].texto %></li>
				<% } %>
			</ul>
			<a class="btn btn-info" href="/quizes/<%= quiz.id %>/comments/new" role="button">Nuevo Comentario</a>
		</div>
	</div>
</div>